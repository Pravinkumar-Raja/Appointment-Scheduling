package com.example.demo.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.demo.bean.AppointmentBean;
import com.example.demo.dao.AppointmentDao;

@Service
public class Appointment1Service {

	@Autowired
	private AppointmentDao adao;
public void appointmentBook(AppointmentBean ab)
{
	ab.setStatus("Confirmed");
	adao.save(ab);

}
public String cancelAppointment(int id)
{
	AppointmentBean ab=adao.findById(id).orElseThrow();
	
	ab.setStatus("Cancelled");
	adao.save(ab);
	return "<h1> Appointment Cancelled Successfully</h1>";
}
}
